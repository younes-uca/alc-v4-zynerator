                            <th>Etudiant</th>
                            <th>Quiz</th>
                            <th>Note</th>
                            <th>Resultat</th>
                            <th>QuestionCurrent</th>
        </tr>
        </thead>

        <tbody>
                #foreach( $item in $quizEtudiants )
                #if( ($foreach.index % 2) == 0 )
                <tr style="background-color: #f4f5f6">
                    #else
                <tr style="background-color: #e9ebec">
                    #end
                            <td>$item.ref</td>
                            <td>$item.quiz.lib</td>
                            <td>$item.note</td>
                            <td>$item.resultat</td>
                            <td>$item.questionCurrent</td>
                </tr>
                #end


        </tbody>
    </table>
